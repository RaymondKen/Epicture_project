<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicure.chronos.epicure.Login_activity"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="Enter your pin access:" />

        <EditText
            android:id="@+id/code_enter"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Enter your code"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="16dp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_column="1"
            android:layout_marginBottom="194dp"
            android:layout_marginStart="99dp"
            android:layout_row="0"
            android:onClick="addToFavorite"
            android:text="Add"
            android:textStyle="italic"
            fbutton:buttonColor="@color/fbutton_color_emerald"
            fbutton:cornerRadius="5dp"
            fbutton:shadowColor="@color/fbutton_color_nephritis"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp" />

    </GridLayout>



</RelativeLayout>
